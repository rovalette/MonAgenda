<Window x:Class="MyWPFAgenda.Artiste"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Artiste"
        Height="95"
        Width="300"
        WindowStyle="ToolWindow"
        WindowStartupLocation="CenterScreen"
        SizeToContent="WidthAndHeight"
        MaxHeight="525"
        MinHeight="130"
        MaxWidth="600"
        MinWidth="300"
        ResizeMode="NoResize">
    <StackPanel x:Name="bigpanel" Margin="0,0,0,0">
        <TextBlock x:Name="title" Text="Artistes" Background="blue" TextAlignment="Center" MaxHeight="70" MinHeight="70" VerticalAlignment="Top" Foreground="White" FontSize="50"/>
        <TextBox x:Name="zoneText" VerticalScrollBarVisibility="Auto" MaxHeight="415"/>
    </StackPanel>
</Window>
